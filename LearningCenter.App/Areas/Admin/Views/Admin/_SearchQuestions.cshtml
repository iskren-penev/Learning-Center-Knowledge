@using LearningCenter.Models.ViewModels.Admin
@model List<QuestionListViewModel>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().QuizName)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.QuizName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditQuestion", "Quizzes", new { area = "Admin", id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Preview", "PreviewQuestion", "Quizzes", new { area = "Admin", id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </thead>
</table>