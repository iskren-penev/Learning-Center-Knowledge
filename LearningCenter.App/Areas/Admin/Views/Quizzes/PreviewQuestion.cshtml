@using LearningCenter.Models.ViewModels.Quiz
@model PreviewQuestionViewModel

@{
    ViewBag.Title = "View Question";
}

<h2 class="heading-centered">Question:</h2>
<div class="row">
    <div class="col-sm-10 col-sm-offse-1">
        <div style="font-size: 18px">
            <blockquote>
                @Html.DisplayFor(model => model.Description)
            </blockquote>
        </div>
    </div>
</div>
<hr />
<h3 class="heading-centered">Answers:</h3>
@foreach (var answer in Model.Answers)
{
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            @if (answer.IsCorrect)
            {
                <p style="font-size: 16px" class="text-success">
                    @Html.DisplayFor(model => answer.Value)
                </p>
            }
            else
            {
                <p style="font-size: 16px" class="text-danger">
                    @Html.DisplayFor(model => answer.Value)
                </p>
            }
        </div>
    </div>
}
<div class="row">
    <div class="col-sm-2 col-sm-offset-2">
        @Html.ActionLink("Back to list", "QuestionList", "Admin", new { area = "Admin" }, new { @class = "btn btn-block btn-default" })
    </div>
    <div class="col-sm-2">
        @Html.ActionLink("Edit question", "EditQuestion", "Quizzes", new { area = "Admin", id = @Model.Id }, new { @class = "btn btn-block btn-warning" })
    </div>
</div>