
@using (@Html.BeginForm("AddReply", "Forum", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <input type="number" value=@ViewBag.TopicId name="TopicId" hidden="" />
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
                <textarea rows="10" cols="150" name="Content" id="mytextarea" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 col-sm-offset-5">
                <input type="submit" class="btn btn-success btn-block" value="Reply" />
            </div>
        </div>
    </div>
}

