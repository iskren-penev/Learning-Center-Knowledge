
@using (@Html.BeginForm("AddReply", "Forum", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <input type="number" value=@ViewBag.TopicId name="TopicId" hidden="" />
        </div>
        <div class="form-group">

            @*<h3 class="control-label col-sm-1 col-sm-offset-2">Reply:</h3>*@

            <div class="col-sm-10 col-sm-offset-2">
                <textarea rows="10" cols="150" name="Content" id="mytextarea" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="pull-right">
                <input type="submit" class="btn btn-success" value="Post reply" />
            </div>
        </div>
    </div>
}

