@using LearningCenter.Models.ViewModels.Course
@model IEnumerable<AllCourseViewModel>

@{
    ViewBag.Title = "All Courses";
}
<br />
<br />

@foreach (var course in Model)
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@Html.ActionLink(course.Title, "Detailed", "Courses", new { id = course.Id }, null)</h3>
        </div>
        <div class="panel-body">
            <p>
                <span>@course.ShortDescription</span>
            </p>

        </div>
        <div class="panel-footer">
            <p>Students in course: @course.StudentsInCourse</p>
        </div>
    </div>
}


   

